{
  "name": "HA VMI - Ventilairsec & EnOcean",
  "version": "1.0.0",
  "slug": "ha_vmi",
  "description": "Home Assistant addon for VMI Purevent and EnOcean sensors via MQTT",
  "url": "https://github.com/fortinric88/ha-vmi",
  "codeowners": ["@fortinric88"],
  "documentation": "https://github.com/fortinric88/ha-vmi#readme",
  "repository": "https://github.com/fortinric88/ha-vmi",
  "startup": "services",
  "boot": "auto",
  "arch": ["aarch64", "amd64", "armv7"],
  "image": "ghcr.io/fortinric88/ha-vmi-{arch}",
  "privileged": ["NET_ADMIN"],
  "host_network": true,
  "options": {
    "device": "auto",
    "log_level": "info",
    "mqtt_broker": "localhost",
    "mqtt_port": 1883,
    "mqtt_user": "",
    "mqtt_password": "",
    "vmi_name": "Ventilairsec"
  },
  "schema": {
    "device": "str?",
    "log_level": "list(debug|info|warning|error)",
    "mqtt_broker": "str",
    "mqtt_port": "port",
    "mqtt_user": "str?",
    "mqtt_password": "password?",
    "vmi_name": "str"
  },
  "services": ["mqtt"],
  "homeassistant": {
    "api": true
  },
  "ports": {
    "9999/tcp": null
  }
}
